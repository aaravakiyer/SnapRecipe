<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="CameraFragment"
    android:background="@android:color/black">

    <!-- 1. PreviewView to display the camera feed -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ADDED: ImageView to show the captured image preview -->
    <!-- It is placed on top of the camera preview and is hidden by default -->
    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        android:visibility="gone"
        android:contentDescription="Preview of the captured image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" /> <!-- tools:visibility makes it visible in the preview editor -->

    <!-- UPDATED: Capture Button ID changed to btn_capture -->
    <ImageButton
        android:id="@+id/btn_capture"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/capture_button_background"
        android:contentDescription="Capture Image"
        android:elevation="2dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_camera_capture" />

    <!-- ADDED: Gallery Button -->
    <ImageButton
        android:id="@+id/btn_gallery"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_gallery"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Open Gallery"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/btn_capture"
        app:layout_constraintTop_toTopOf="@id/btn_capture"
        app:layout_constraintStart_toEndOf="@id/btn_capture"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
